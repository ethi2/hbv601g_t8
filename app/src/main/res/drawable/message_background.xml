<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" />
            <corners android:radius="16dp" />
            <padding android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
    <!-- Content Layer -->
    <item android:left="4dp" android:top="4dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#E1F5FE" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
